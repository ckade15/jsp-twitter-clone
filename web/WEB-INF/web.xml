<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Twitter</servlet-name>
        <servlet-class>twitter.Twitter</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>twitter.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>twitter.Profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>twitter.Upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetImage</servlet-name>
        <servlet-class>twitter.GetImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateAccount</servlet-name>
        <servlet-class>twitter.CreateAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Discover</servlet-name>
        <servlet-class>twitter.Discover</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>twitter.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateTweet</servlet-name>
        <servlet-class>twitter.CreateTweet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetTweetImage</servlet-name>
        <servlet-class>twitter.GetTweetImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteTweet</servlet-name>
        <servlet-class>twitter.DeleteTweet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicProfile</servlet-name>
        <servlet-class>twitter.PublicProfile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Twitter</servlet-name>
        <url-pattern>/Twitter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/Profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/Upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetImage</servlet-name>
        <url-pattern>/GetImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateAccount</servlet-name>
        <url-pattern>/CreateAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Discover</servlet-name>
        <url-pattern>/Discover</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateTweet</servlet-name>
        <url-pattern>/CreateTweet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetTweetImage</servlet-name>
        <url-pattern>/GetTweetImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteTweet</servlet-name>
        <url-pattern>/DeleteTweet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicProfile</servlet-name>
        <url-pattern>/PublicProfile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
